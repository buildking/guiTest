root.title("업무 자동화 시스템")
root.geometry("400x300")
root.resizable(False, False)


excelMergeBtn = Button(root, text="엑셀 합치기", command=excelCombine())
excelMergeBtn.pack(padx=2, pady=2, fill='x')

